@import '_fonts'
@import '_variables'
@import '_mixins'

*
	box-sizing border-box

html, body
	margin 0
	padding 0

html
	height 100%
	font-family Apercu

body
	width 100%
	height 100%
	position relative

a
	color secondary
	text-decoration underline

.social
	display table
	margin 0 auto

.social .row
	display table-row

.social .row a
	display table-cell
	color primary
	text-decoration none
	transition 400ms
	padding .4em

.social .row a:hover
	color secondary

.social .row a:first-child
	padding-right 40px

.social .row a span
	vertical-align middle
	padding-left 8px

.social .row a span:first-child
	font-family Mono Social Icons Font
	font-size 42px
	padding-left 0

.top
	width 100%
	background #FFF
	box-shadow 0 2px 0 rgba(0, 0, 0, .08)
	position fixed
	top 0
	z-index 3

.top.hide
	translate 0px,-100%,0px,0deg
	transition-duration 300ms
	transition-delay .1s

body
	&.animate
		.top
			transition-duration 1000ms
			transition-delay 0

.banner, .content
	width 100%
	max-width 960px
	margin 0 auto
	color secondary

.banner
	.me
		font-size 120%

.banner .col
	display inline-block
	margin 20px 30px 10px

nav
	text-transform uppercase
	font-size 17px
	letter-spacing 0.2em
	text-align center
	font-style italic

nav ul
	list-style-type none
	margin 0
	padding 0

nav li
	display inline-block
	margin 16px

nav a
	display inline-block
	color white
	text-decoration none

.content
	font-family Georgia, Cambria, "Times New Roman", Times, serif
	font-weight 400
	font-size 18px
	line-height 1.5
	margin-bottom 60px
	padding-bottom 80px

	position relative
	z-index 2

p
	margin 6px 0 34px 0

.fineprint, .fineprint a
	color #888

.fineprint
	margin 60px 0 0 0
	text-align center
	font-size 16px
	font-style italic
	letter-spacing 0.8px

.content a
	text-decoration underline
	transition 400ms

.content a:hover
	color primary

section
	padding 0 70px 40px 70px
	margin-bottom 100px
	background white
	padding-top 40px

	&.log
		.date
			&:after
				content 'Â»'
				padding 0 10px

h1
	font-family Apercu
	font-size 32px
	text-transform uppercase
	letter-spacing 0.08em
	color primary
	display inline-block
	background white

h2, h3, h4
	font-family Apercu
	font-size 16px
	text-transform uppercase
	letter-spacing 0.08em
	color secondary
	margin-bottom 30px

h4
	text-transform none
	font-size 14px
	margin 10px auto

.highlight
	font-size 16px
	margin 20px 10px 40px

	ul
		margin 14px 0
		padding 0

		li
			margin 4px 4px 4px 20px
			padding 0 0 0 4px

.roll
	display inline-block
	line-height 1.2
	overflow hidden
	vertical-align top
	background primary
	perspective 400px
	perspective-origin 50%,50%
	border-radius 3px
	border-bottom 2px solid primary_tinted

.roll span
	display block
	position relative
	padding 8px 24px
	pointer-events none
	background primary
	transition 400ms
	transform-origin 50%,0%
	transform-style preserve-3d
	backface-visibility hidden

.roll span:after
	content attr(data-title)
	display block
	position absolute
	left 0
	top 0
	padding 8px 24px
	background primary_tinted
	backface-visibility hidden
	transform-origin 50%,0%
	translate 0px,110%,0px,-90deg

.roll:hover span
	translate 0px,0px,-45px,90deg

.wrap
	background secondary_tinted
	background radial-gradient(circle farthest-corner at center center , #01FFE5 0%, secondary_tinted 100%) repeat scroll 0% 0% transparent
	width 100%
	height 100%
	position fixed
	z-index 1
	top 0

.loading:after
	content: 'loading...'
	color #c0c
	text-transform uppercase
	text-align center
	font-style italic
	width 100%
	top 50%
	position fixed
	z-index 1

.three
	width 100%
	height 120%
	opacity 0
	transition 800ms

.three.visible
	opacity 1

canvas
	width 100%
	height 100%

.gallery
	width 100%
	margin 40px 0

.gallery div
	width calc(100%/3)
	float left
	text-align center

	line-height 40px

	padding 8px 14px

.gallery:last-child:after
	content ''
	display block
	clear both

.gallery div img
	width 100%
	height auto

	border 2px solid #EBEBEB
	border-radius(4px)

img.me
	display block
	width 24%
	float left
	margin 0 30px 30px 0

	border-radius(4px)

a[data-internal='']
	display none

.glitch
	a[data-internal='']
		display inline-block
	a[data-internal='glitch']
		display none

@import '_log'
@import '_mobile'
